<section id="home" class="min-h-screen flex items-center bg-gradient-to-br from-gray-600 via-gray-700 to-gray-800 text-white relative overflow-hidden">
  <!-- Background Animation -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 1000 1000\"><polygon fill=\"white\" fill-opacity=\"0.1\" points=\"0,1000 1000,0 1000,1000\"/></svg>')] animate-float"></div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 lg:px-8 grid lg:grid-cols-2 gap-8 lg:gap-16 items-center z-10 relative">
    <div class="text-center lg:text-left animate-on-scroll">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6 leading-tight">
        Crafting Digital Solutions That Matter
      </h1>
      <p class="text-lg md:text-xl mb-8 opacity-90 leading-relaxed">
        We are an agile digital consultancy that loves creating simple and intuitive applications using the latest open source technologies. Let's build something amazing together.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
        <a href="#services" class="border-2 border-white text-white px-8 py-4 rounded-full font-semibold flex items-center gap-2 justify-center hover:bg-white hover:text-primary-500 transition-all duration-300">
          <i class="fas fa-rocket"></i>
          Our Services
        </a>
        <a href="#about" class="border-2 border-white text-white px-8 py-4 rounded-full font-semibold flex items-center gap-2 justify-center hover:bg-white hover:text-primary-500 transition-all duration-300">
          <i class="fas fa-play"></i>
          Learn More
        </a>
      </div>
    </div>
    
    <div class="flex justify-center animate-on-scroll">
      <div class="grid grid-cols-3 gap-4 max-w-xs">
        {[
          'fab fa-react',
          'fab fa-node-js',
          'fab fa-python',
          'fab fa-js-square',
          'fas fa-database',
          'fab fa-aws',
          'fab fa-docker',
          'fab fa-git-alt',
          'fas fa-mobile-alt'
        ].map((icon, index) => (
          <div 
            class="w-16 h-16 md:w-20 md:h-20 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center text-2xl hover:bg-white/30 hover:scale-110 transition-all duration-300 animate-float"
            style={`animation-delay: ${index * 0.5}s`}
          >
            <i class={icon}></i>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>